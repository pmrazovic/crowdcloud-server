<ol class="breadcrumb">
  <li><%= link_to "Sensing tasks", sensing_tasks_path %></li>
  <li><%= link_to @sensing_task.name, sensing_task_path(@sensing_task) %></li>
  <li><%= link_to "Responses", sensing_task_responses_path(@sensing_task) %></li>
  <li class="active"><%= @response.created_at %></li>
</ol>
<%= render :partial => "sensing_tasks/side_navigation" %>

<div class="col-lg-9">
  <% @response.response_items.each do |response_item| %>
    <% if response_item.response_data_type == 'GeoLocationData' %>
      <%= render :partial => 'response_items/geo_location_data_response', :locals => { :data => response_item.response_data }  %>
    <% elsif response_item.response_data_type == 'LightData' %>
      <%= render :partial => 'response_items/light_data_response', :locals => { :data => response_item.response_data }  %>
    <% elsif response_item.response_data_type == 'MotionData' %>
      <%= render :partial => 'response_items/motion_data_response', :locals => { :data => response_item.response_data }  %>
    <% elsif response_item.response_data_type == 'OrientationData' %>
      <%= render :partial => 'response_items/orientation_data_response', :locals => { :data => response_item.response_data }  %>
    <% end %>
  <% end %>
</div>