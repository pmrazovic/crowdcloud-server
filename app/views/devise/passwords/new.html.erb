<%= render :partial => "devise/shared/devise_errors" %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name),
            html: { role: "form", method: :post }) do |f| %>
  <div class="form-group" style="margin-top: 10px;">
    <%= f.email_field :email, :class => "form-control", :autofocus => true, :placeholder => 'Email' %>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Send me reset password instructions</button>
  <div class="shared-links">
    <span class="small">
      <%= render "devise/shared/links" %>
    </span> 
  </div>  
<% end %>