<%= render :partial => "devise/shared/devise_errors" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :role => "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :class => "form-control", :autofocus => true, :placeholder => 'Email' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class => "form-control", :required => true, :placeholder => 'Password' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "form-control", :required => true, :placeholder => 'Repeat password' %>
  </div>
  <button class="btn btn-primary btn-block" type="submit">Sing up</button>
  <div class="shared-links">
    <span class="small">
      <%= render "devise/shared/links" %>
    </span>
  </div>
<% end %>