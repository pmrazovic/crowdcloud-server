<ol class="breadcrumb">
  <li><%= link_to '<i class="fa fa-puzzle-piece"></i> Human intelligence tasks'.html_safe, human_intelligence_tasks_path %></li>
  <li class="active">New human intelligence task</li>
</ol>

<%= render :partial => "creation_progress", :locals => {:step => 3} %>

<div class="row" style="margin-top: 40px;">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    
    <%= form_for @hit, :url => {:controller => 'human_intelligence_tasks', :action => 'confirm_step_3'}, :html => { :class => "form", :method => :put } do |f| %>
      <% if @hit.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@hit.errors.count, "error") %> prohibited this human intelligence task from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @hit.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :response_data_types, "Context data", :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <table class="table table-bordered white-background">
            <% ResponseDataType.order(:name).each do |type| %>
              <tr>
                <td class="narrow-cell">
                  <%= check_box_tag("human_intelligence_task[response_data_type_ids][]", type.id, type.id.in?(@hit.response_data_types.collect(&:id)), :disabled => !type.enabled) %> 
                </td>
                <td class="narrow-cell <%= type.enabled ? '' : 'text-muted' %>"><%= response_data_type_icon(type.name).html_safe %></td>
                <td class="<%= type.enabled ? '' : 'text-muted' %>"><%= type.name.underscore.humanize %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <%= link_to '<i class="fa fa-chevron-left"></i> Previous step'.html_safe, step_2_human_intelligence_task_path(@hit), :class => 'btn btn-block btn-lg btn-warning' %>
        </div>
        <div class="col-lg-6">
          <%= button_tag(:type => 'submit', :class => "btn btn-block btn-lg btn-primary") do %>
            Next step <i class="fa fa-chevron-right"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  
  </div>

  <div class="col-lg-2"></div>
</div>