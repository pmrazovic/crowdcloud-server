<ol class="breadcrumb">
  <li class="active"><i class="fa fa-puzzle-piece"></i> Human intelligence tasks</li>
</ol>

<div class="row">

  <div class="col-lg-12">

    <% if @hits.empty? %>

      <div class="alert alert-info" role="alert">
        There are currently no human intelligence tasks created in CrowdCloud!
      </div>
      <%= link_to '<i class="fa fa-file-text-o"></i> Create new HIT'.html_safe,
            step_1_human_intelligence_tasks_path,
          :class => 'btn btn-primary' %>

    <% else %>

      <%= link_to '<i class="fa fa-file-text-o"></i> Create new HIT'.html_safe,
              step_1_human_intelligence_tasks_path,
            :class => 'btn btn-primary',
            :style => "margin-bottom: 20px;" %>

      <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Status</th>
            <th>Question</th>
            <th>Crowdsourcer</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @hits.each do |hit| %>
            <tr>
              <td><%= link_to hit.id, human_intelligence_task_path(hit) %></td>
              <td><%= hit_status_label_type(hit) %></span></td>
              <td><%= hit.question %></td>
              <td><%= "#{hit.account.first_name} #{hit.account.last_name}" %></td>
              <td><%= truncate(hit.description, :length => 60) %></td>
              <td>
                <% if can? :finish_formulation, hit %>
                  <%= link_to '<i class="fa fa-history"></i> Continue creation'.html_safe,
                            finish_formulation_human_intelligence_task_path(hit), :class => 'btn btn-default btn-sm' %>
                <% end %>
                <% if can? :show, hit %>
                  <%= link_to '<i class="fa fa-cogs"></i> Show'.html_safe,
                            human_intelligence_task_path(hit), :class => 'btn btn-default btn-sm' %>
                <% end %>
                <% if can? :edit, hit %>
                  <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe,
                            edit_human_intelligence_task_path(hit), :class => 'btn btn-default btn-sm' %>
                <% end %>
                <% if can? :delete, hit %>
                  <%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe,
                            delete_human_intelligence_task_path(hit),
                            :class => 'btn btn-sm btn-danger' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>

    <%= will_paginate @hits, :previous_label => 'Previous', :next_label => 'Next', :renderer => BootstrapPagination::Rails %>

  </div>

</div>