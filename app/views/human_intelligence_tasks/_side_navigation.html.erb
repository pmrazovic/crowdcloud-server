<ul class="list-group col-lg-3">
  <% if can? :show, @hit %>
    <%= link_to "<i class=\"fa fa-info-circle\"></i> Basic inormation".html_safe, @hit, :class => "list-group-item #{'active' if controller.action_name == "show" && controller.controller_name == "human_intelligence_tasks"}" %>  
  <% end %>
  <% if can? :edit, @hit %>
    <%= link_to "<i class=\"fa fa-pencil-square-o\"></i> Edit".html_safe, edit_human_intelligence_task_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "edit"}" %>
  <% end %>
  <% if can? :confirm_publish, @hit %>
    <%= link_to "<i class=\"fa fa-bell\"></i> Publish".html_safe, confirm_publish_human_intelligence_task_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "confirm_publish"}" %> 
  <% end %>
  <% if can? :devices, @hit %>
    <%= link_to "<i class=\"fa fa-desktop\"></i> Devices".html_safe, devices_human_intelligence_task_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "devices"}" %>
  <% end %>
  <% if can? :delete, @hit %>
    <%= link_to "<i class=\"fa fa-trash-o\"></i> Delete".html_safe, delete_human_intelligence_task_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "delete"}" %>
  <% end %>
</ul>
