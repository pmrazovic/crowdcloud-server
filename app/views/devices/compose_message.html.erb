<ol class="breadcrumb">
  <li><%= link_to '<i class="fa fa-laptop"></i> Devices'.html_safe, devices_path %></li>
  <li class="active"><%= @device.uuid %></li>
</ol>
<%= render :partial => "side_navigation" %>

<div class="col-lg-9">
  <%= form_for(:message, :url => { :controller => :devices, :action => :push_message }, :html => {:role => "form" }) do |f| %>
    <div class="form-group">  
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, :class => "form-control", :required => true %>
    </div>
    <div class="form-group">  
      <%= f.label :body, "Message" %>
      <%= f.text_area :body, :rows => "5", :class => "form-control", :required => true %>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-send"></i> Send message</button>
    </div>    
  <% end %>  
</div>