<ul class="list-group col-lg-3">
  <% if can? :show, @device %>
    <%= link_to "<i class=\"fa fa-info-circle\"></i> Basic inormation".html_safe, @device, :class => "list-group-item #{'active' if controller.action_name == "show"}" %>  
  <% end %>
  <% if can? :compose_message, @device %>
    <%= link_to "<i class=\"fa fa-send\"></i> Send message".html_safe, compose_message_device_path(@device), :class => "list-group-item #{'active' if controller.action_name == "compose_message"}" %>
  <% end %>
  <% if can? :sensors, @device %>
    <%= link_to "<i class=\"fa fa-tachometer\"></i> Sensor information".html_safe, sensors_device_path(@device), :class => "list-group-item #{'active' if controller.action_name == "sensors"}" %>
  <% end %>
  <% if can? :mobility_profile, @device %>
    <%= link_to "<i class=\"fa fa-map-marker\"></i> Mobility profile".html_safe, mobility_profile_device_path(@device), :class => "list-group-item #{'active' if controller.action_name == "mobility_profile"}" %> 
  <% end %>
  <% if can? :responses, @device %>
    <%= link_to "<i class=\"fa fa-cloud-download\"></i> Responses".html_safe, responses_device_path(@device), :class => "list-group-item #{'active' if controller.action_name == "responses"}" %>
  <% end %>
  <% if can? :statistics, @device %>
    <%= link_to "<i class=\"fa fa-bar-chart-o\"></i> Statistics".html_safe, statistics_device_path(@device), :class => "list-group-item #{'active' if controller.action_name == "statistics"}" %>
  <% end %>
  <% if can? :unregister, @device %>
    <%= link_to "<i class=\"fa fa-trash-o\"></i> Unregister".html_safe, unregister_device_path(@device), :class => "list-group-item #{'active' if controller.action_name == "unregister"}" %> 
  <% end %>
</ul>
