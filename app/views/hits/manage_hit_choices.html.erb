<ol class="breadcrumb">
  <li><%= link_to '<i class="fa fa-puzzle-piece"></i> Human intelligence tasks'.html_safe, hits_path %></li>
  <li><%= link_to "HIT No. #{@hit.id}", hit_path(@hit) %></li>
  <li class="active"> Manage answer choices</li>
</ol>
<%= render :partial => "side_navigation" %>

  <div class="col-lg-9">
    
    <div class="row" style="margin-bottom: 30px;">
      <div class="col-lg-6">
        <%= link_to '<i class="fa fa-plus"></i> Create new choice'.html_safe, new_hit_choice_path(:hit_id => @hit.id), :class => "btn btn-lg btn-block btn-default", :remote => true %>
      </div>
    </div>
    
    <div id="hitChoices">
      <% @hit.hit_choices.each do |choice| %>
        <%= render :partial => "hit_choices/hit_choice_row", :locals => {:hit_choice => choice} %>        
      <% end %>
    </div>
  
  </div>


<!-- Modal -->
<div class="modal fade" id="createNewModal" tabindex="-1" role="dialog" aria-labelledby="createNewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="createNewModalLabel">HIT choice</h4>
      </div>
      <div class="modal-body" id="createNewModalBody">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->