<ul class="list-group col-lg-3">
  <% if can? :show, @hit %>
    <%= link_to "<i class=\"fa fa-info-circle\"></i> Basic inormation".html_safe, @hit, :class => "list-group-item #{'active' if controller.action_name == "show" && controller.controller_name == "hits"}" %>  
  <% end %>
  <% if can? :edit, @hit %>
    <%= link_to "<i class=\"fa fa-pencil-square-o\"></i> Edit".html_safe, edit_hit_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "edit"}" %>
  <% end %>
  <% if can? :manage_hit_choices, @hit %>
    <%= link_to "<i class=\"fa fa-bars\"></i> Manage answer choices".html_safe, manage_hit_choices_hit_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "manage_hit_choices"}" %>
  <% end %>
  <% if can? :confirm_publish, @hit %>
    <%= link_to "<i class=\"fa fa-bell\"></i> Publish".html_safe, confirm_publish_hit_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "confirm_publish"}" %> 
  <% end %>
  <% if can? :responses, @hit %>
    <%= link_to "<i class=\"fa fa-cloud-download\"></i> Responses".html_safe, responses_hit_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "responses" }" %>  
  <% end %>
  <% if can? :devices, @hit %>
    <%= link_to "<i class=\"fa fa-desktop\"></i> Devices".html_safe, devices_hit_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "devices"}" %>
  <% end %>
  <% if can? :delete, @hit %>
    <%= link_to "<i class=\"fa fa-trash-o\"></i> Delete".html_safe, delete_hit_path(@hit), :class => "list-group-item #{'active' if controller.action_name == "delete"}" %>
  <% end %>
</ul>
