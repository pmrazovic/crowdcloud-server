<ul class="list-group col-lg-3">
  <% if can? :show, @sensing_task %>
    <%= link_to "<i class=\"fa fa-info-circle\"></i> Basic inormation".html_safe, @sensing_task, :class => "list-group-item #{'active' if controller.action_name == "show" && controller.controller_name == "sensing_tasks"}" %>  
  <% end %>
  <% if can? :edit, @sensing_task %>
    <%= link_to "<i class=\"fa fa-pencil-square-o\"></i> Edit".html_safe, edit_sensing_task_path(@sensing_task), :class => "list-group-item #{'active' if controller.action_name == "edit"}" %>
  <% end %>
  <% if can? :confirm_publish, @sensing_task %>
    <%= link_to "<i class=\"fa fa-bell\"></i> Publish".html_safe, confirm_publish_sensing_task_path(@sensing_task), :class => "list-group-item #{'active' if controller.action_name == "confirm_publish"}" %> 
  <% end %>
  <% if can? :devices, @sensing_task %>
    <%= link_to "<i class=\"fa fa-desktop\"></i> Devices".html_safe, devices_sensing_task_path(@sensing_task), :class => "list-group-item #{'active' if controller.action_name == "devices"}" %>
  <% end %>
  <% if can? :sensing_responses, @sensing_task %>
    <%= link_to "<i class=\"fa fa-cloud-download\"></i> Sensing responses".html_safe, sensing_responses_sensing_task_path(@sensing_task), :class => "list-group-item #{'active' if controller.action_name == "sensing_responses" || controller.action_name == 'sensing_response_details'}" %>  
  <% end %>
  <% if can? :delete, @sensing_task %>
    <%= link_to "<i class=\"fa fa-trash-o\"></i> Delete".html_safe, delete_sensing_task_path(@sensing_task), :class => "list-group-item #{'active' if controller.action_name == "delete"}" %>
  <% end %>
</ul>
