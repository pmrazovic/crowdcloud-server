<ul class="list-group col-lg-3">
  <% if can? :show, @open_call %>
    <%= link_to "<i class=\"fa fa-info-circle\"></i> Basic inormation".html_safe, @open_call, :class => "list-group-item #{'active' if controller.action_name == "show" && controller.controller_name == "open_calls"}" %>  
  <% end %>
  <% if can? :edit, @open_call %>
    <%= link_to "<i class=\"fa fa-pencil-square-o\"></i> Edit".html_safe, edit_open_call_path(@open_call), :class => "list-group-item #{'active' if controller.action_name == "edit"}" %>
  <% end %>
  <% if can? :confirm_publish, @open_call %>
    <%= link_to "<i class=\"fa fa-bell\"></i> Publish".html_safe, confirm_publish_open_call_path(@open_call), :class => "list-group-item #{'active' if controller.action_name == "confirm_publish"}" %> 
  <% end %>
  <% if can? :devices, @open_call %>
    <%= link_to "<i class=\"fa fa-desktop\"></i> Devices".html_safe, devices_open_call_path(@open_call), :class => "list-group-item #{'active' if controller.action_name == "devices"}" %>
  <% end %>
  <% if can? :index, Response %>
    <%= link_to "<i class=\"fa fa-cloud-download\"></i> Responses".html_safe, open_call_responses_path(@open_call), :class => "list-group-item #{'active' if controller.controller_name == "responses"}" %>  
  <% end %>
  <% if can? :delete, @open_call %>
    <%= link_to "<i class=\"fa fa-trash-o\"></i> Delete".html_safe, delete_open_call_path(@open_call), :class => "list-group-item #{'active' if controller.action_name == "delete"}" %>
  <% end %>
</ul>
