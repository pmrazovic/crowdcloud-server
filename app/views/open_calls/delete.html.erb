<ol class="breadcrumb">
  <li><%= link_to "Open calls", open_calls_path %></li>
  <li><%= link_to @open_call.name, open_call_path(@open_call) %></li>
  <li class="active"> Delete</li>
</ol>
<%= render :partial => "side_navigation" %>

<div class="col-lg-9">
  <div class="alert-message alert-message-danger">
    <h4>Warning</h4>
    <p>Are you sure you want to delete this open call and corresponding responses? This action can't be undone.</p>
    <%= form_tag open_call_path(@open_call), :method => :delete do %>
      <div class="form-group">
        <%= label_tag :password, t('.password') %>
        <%= password_field_tag :password, nil, :class => "form-control input-sm", :required => true %>
      </div>
      <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> Delete</button>
    <% end %>
  </div>
</div>